7)
P1 = [1, -6, 15, -14];
All_R1 = roots(P1)
R1 = All_R1(imag(All_R1) == 0)
x1 = linspace(min(R1)-1, max(R1)+1, 50);
F1 = polyval(P1, x1);
plot(x1, F1);
grid on
hold on
for i = 1:length(R1)
    scatter(R1, 0, 'filled','red');
end
hold off

P2 = [1, -2, -8, 13, -24];
All_R2 = roots(P2)
R2 = All_R2(imag(All_R2) == 0)
x2 = linspace(min(R2)-1, max(R2)+1, 50);
F2 = polyval(P2, x2);
plot(x2, F2);
grid on
hold on
for i = 1:length(R2)
    scatter(R2(i), 0, 'filled','red')
end


