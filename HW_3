P = [1 -3.55 5.1 -3.1];
x = linspace(-5, 5, 50);
F = polyval(P, x);
plot(x, F);
grid on
hold on
format short
R = roots(P);
R = R(imag(R) == 0);
scatter(R, 0, 'filled','red')
xline(R, 'black', 'Linewidth', 1);

